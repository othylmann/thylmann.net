---
interface Props {
    text: string;
    author: string;
}

const { text, author } = Astro.props;
---

<div
    class="group relative bg-white/5 border border-white/10 rounded-xl p-4 md:p-5 backdrop-blur-sm max-w-sm transition-all hover:bg-white/10 hover:border-white/20"
>
    <div class="mb-3">
        <span
            class="text-[10px] font-bold text-accent/50 uppercase tracking-[0.2em] select-none"
            >Quote of the Day</span
        >
    </div>
    <div
        class="absolute top-8 left-2 text-3xl text-accent/20 font-serif leading-none select-none"
    >
        "
    </div>
    <p
        class="text-sm md:text-md text-text-main/80 leading-relaxed italic mb-2 relative"
    >
        {text}
    </p>
    <div class="flex items-center gap-2">
        <div class="h-[1px] w-4 bg-accent/30"></div>
        <span class="text-xs font-medium text-accent uppercase tracking-wider"
            >{author}</span
        >
    </div>
</div>
