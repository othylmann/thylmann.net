<script>
  const gate = document.getElementById("contact-gate");
  const label = document.getElementById("contact-label");
  const text = document.getElementById("contact-text");
  const overlay = document.getElementById("error-overlay");

  if (gate && label && text && overlay) {
    let attempts = 0;
    const messages = [
      "Access Denied.",
      "Use The Network.",
      "404: Email Not Found.",
      "Try LinkedIn Up There.",
    ];

    gate.addEventListener("click", (e) => {
      e.preventDefault();

      // 1. Shake Animation
      gate.classList.add("animate-shake");
      setTimeout(() => gate.classList.remove("animate-shake"), 500);

      // 2. Visual Feedback (Red Flash)
      gate.classList.remove("bg-accent/10", "hover:bg-accent"); // Remove nice styles
      gate.classList.add("bg-red-900/20", "border-red-500/50"); // Add error styles
      overlay.classList.remove("opacity-0");
      setTimeout(() => overlay.classList.add("opacity-0"), 200);

      // 3. Text Swap
      label.innerText = "/// ERROR_403";
      label.classList.add("text-red-400");

      text.innerText = messages[attempts % messages.length];
      text.classList.add("text-red-200");

      attempts++;
    });
  }
</script>

<style>
  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    10%,
    30%,
    50%,
    70%,
    90% {
      transform: translateX(-4px);
    }
    20%,
    40%,
    60%,
    80% {
      transform: translateX(4px);
    }
  }

  .animate-shake {
    animation: shake 0.4s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
  }
</style>
